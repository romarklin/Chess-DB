<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="https://github.com/avaloniaui"
    xmlns:dg="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
    xmlns:vm="using:Chess_DB.ViewModels"
    x:Class="Chess_DB.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    Title="Gestion des Joueurs" Width="400" Height="300">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <StackPanel Margin="10">
        <TextBlock Text="Liste des joueurs" FontWeight="Bold" FontSize="16"/>
    <dg:DataGrid ItemsSource="{Binding Joueurs}" AutoGenerateColumns="True" Margin="0,10,0,0"/>
    </StackPanel>
</Window>

